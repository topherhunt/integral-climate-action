.row
  .col-sm-8
    %h1
      - if @post.published?
        Edit post
      - elsif @post.title.present?
        Edit draft
      - else
        New draft conversation
    - if !@post.published? and current_user.posts.roots.draft.count > 1
      - phrase = pluralize(current_user.posts.roots.draft.count - 1, "other draft")
      %p.em You have #{link_to phrase, drafts_posts_path}.
    = render partial: "form_root", locals: { post: @post }
  .col-sm-4
    %div{style: "width: 100%; height: 300px; overflow: hidden;"}
      = image_tag "list_images/conversations.jpg", style: "width: 100%; margin-top: -100px;"
    = render partial: "sidebar_hint"
