.list-row
  %div{style: "float: left; width: 50px; height: 50px;"}
    = link_to image_tag("icons/conversation.png", class: "img-rounded", style: "width: 100%;"), post_path(post)
  %div{style: "margin-left: 60px;"}
    - if opts[:in_search]
      .text-muted.small CONVERSATION
    .nowrap.text-ellipsis
      %span.h4= link_to post.title, post_path(post)
    .nowrap.text-ellipsis.text-muted
      = sanitize(post.published_content, tags: [])
    .nowrap
      - community = post.conversants
      - community.take(5).each do |user|
        = link_to image_tag(user.image.url(:thumb), class: "img-circle", style: "width: 20px;"), user_path(user)
      - if community.count > 5
        = "+#{community.count - 5}"
      &nbsp;
      - post.tag_list.each do |name|
        = link_to name, search_path(query: name), class: "label label-default"
