%h1.float-left= @post.title
- if current_user == @post.author
  %div.float-left{style: "padding-top: 30px; padding-left: 30px;"}
    = link_to "Edit", edit_post_path(@post)
.clear-float

%p
  %strong Tags:
  - @post.tag_list.each do |tag|
    %span.label.label-default= tag
%p
  %strong Intention:
  #{@post.intention_type} - #{@post.intention_statement}

- unless @post.published?
  .alert.alert-warning
    %h4 This draft is not yet published.
    %p Click on the Edit link to review and publish it.

%hr
= sanitize(@post.content, tags: %w(h1 h2 h3 p blockquote pre strong em s a ul ol li table thead tbody tr th td img), attributes: %w(href src))
%hr

- if @post.published?
  - if current_user.in? @conversants
    %div
      = link_to "Reply to this post", "#", class: "js-new-reply btn btn-default btn-sm", "data-post-id": @post.id
      %i.fa.fa-spinner.loading.js-hidden
      .new-reply-container
  - else
    = link_to "Join the conversation!", "#", class: "btn btn-default", data: { toggle: "modal", target: "#join-conversation-modal" }
    .modal.fade#join-conversation-modal
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"data-dismiss": "modal"} &times;
            %h4.modal-title Join conversation: "#{@post.title}"
          .modal-body
            = render partial: "post_conversants/form", locals: { post_conversant: PostConversant.new }

- if @post.children.published.not_inline.any?
  %h3 Discussion
  - @post.children.published.not_inline.order("created_at ASC").each do |reply|
    = render partial: "show_bottom_comment", locals: { post: reply }
