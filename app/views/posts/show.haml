%h1.float-left= @post.title
- if current_user == @post.author
  %div.float-left{style: "padding-top: 30px; padding-left: 30px;"}
    = link_to "Edit", edit_post_path(@post)
.clear-float

%p
  %strong Tags:
  %span.label.label-primary= @post.intention_type
  - @post.tag_list.each do |tag|
    %span.label.label-default= tag
%p
  %strong Intention:
  = @post.intention_statement

- unless @post.published?
  .alert.alert-warning
    %h4 This draft is not yet published.
    %p Click on the Edit link to review and publish it.

.well= sanitize(@post.content, tags: %w(h1 h2 h3 p blockquote pre strong em s a ul ol li table thead tbody tr th td img), attributes: %w(href src))

- if @post.published?
  - if current_user.in? @conversants
    .reply-container
      = link_to "Reply", new_post_path(parent_id: @post.id), class: "js-new-reply", "data-post-id": @post.id
      %i.fa.fa-spinner.loading.js-hidden
      .reply-form-container
  - else
    = link_to "Join the conversation!", "#", class: "btn btn-link", data: { toggle: "modal", target: "#join-conversation-modal" }
    .modal.fade#join-conversation-modal
      .modal-dialog
        .modal-header
          %button.close{"data-dismiss": "modal"} &times;
          %h4.modal-title Join the conversation
        .modal-body
          = render partial: "post_conversants/form", locals: { post_conversant: PostConversant.new }
