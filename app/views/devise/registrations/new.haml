.centered-600
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .row.row-padded
      .col-sm-4
        = f.label :email
        = required
      .col-sm-8= f.email_field :email, autofocus: true, class: "form-control"
    .row.row-padded
      .col-sm-4
        = f.label :password
        = required
      .col-sm-8= f.password_field :password, autocomplete: "off", class: "form-control"
    .row.row-padded
      .col-sm-4
        = f.label :password_confirmation, "Confirm password"
        = required
      .col-sm-8= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
    .row.row-padded
      .col-sm-4
      .col-sm-8= f.submit "Sign up", class: "btn btn-primary"

  = render "devise/shared/links"
