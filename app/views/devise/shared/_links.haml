%hr

%p
  - if controller_name != 'sessions'
    = link_to "Log in", new_session_path(resource_name)
    &nbsp;
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Sign up", new_registration_path(resource_name)
    &nbsp;
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to "Reset password", new_password_path(resource_name)
    &nbsp;

  Sign in with:&nbsp;
  = link_to fa_icon("facebook-official") + " Facebook", user_facebook_omniauth_authorize_path
  &nbsp;
  = link_to fa_icon("google") + " Google", user_google_oauth2_omniauth_authorize_path
  &nbsp;
  = link_to fa_icon("linkedin-square") + " LinkedIn", user_linkedin_omniauth_authorize_path
