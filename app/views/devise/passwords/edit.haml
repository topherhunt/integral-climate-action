.row
  .col-sm-6.col-sm-offset-3

    %h2 Change your password

    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token

      .row.row-padded
        .col-sm-5= f.label :password, "New password"
        .col-sm-7= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'
      .row.row-padded
        .col-sm-5= f.label :password_confirmation, "Confirm new password"
        .col-sm-7= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
      .row.row-padded
        .col-sm-5
        .col-sm-7= f.submit "Change my password", class: 'btn btn-primary'

    = render "devise/shared/links"
