%form{action: search_path, method: "GET"}
  .input-group
    %input.form-control{type: "text", name: "query", placeholder: "Search #{label_for_class(model_name)}"}
    %input{type: "hidden", name: "models", value: model_name}
    .input-group-btn
      %button.btn.btn-primary{type: "submit"}
        %i.fa.fa-search
        Search
