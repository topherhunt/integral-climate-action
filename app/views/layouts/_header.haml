.navbar.navbar-default
  #main-navbar.container-fluid
    .navbar-header
      = link_to raw("#{fa_icon('globe')} Integral Climate"), root_path, class: 'navbar-brand'
      / The "show links" button. Floats to the RIGHT of its container.
      %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '.navbar-collapse'}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        %li{class: active_if_current(about_path)}= link_to "About", about_path
        %li= link_to "People (TODO)", "#"
        %li{class: active_if_current(projects_path)}= link_to "Projects", projects_path
        %li{class: active_if_current(posts_path)}= link_to "Conversations", posts_path
        %li{class: active_if_current(resources_path)}= link_to "Resources", resources_path

        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown'}
              = current_user.email
              %span.caret
            %ul.dropdown-menu
              %li= link_to "My Profile", user_path(current_user)
              %li= link_to "Account settings", edit_user_registration_path
              %li= link_to "Log out", destroy_user_session_path, method: :delete, class: "text-danger"
        - else
          %li= link_to "Log in", new_user_session_path
          %li= link_to "Sign up", new_user_registration_path
