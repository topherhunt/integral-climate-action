#main-container.container-fluid

  .row

    .col-sm-6
      %h4.text-center #{@users_count} people who envision a more sustainable world
      %div{style: 'position: relative;'}
        - @featured_users.each do |user|
          %div{style: 'float: left; width: 19.9%; padding: 0.5%;'}
            = link_to image_tag(user.image.url(:thumb), style: "width: 100%;", class: "js-tooltip", data: { tooltip: user.full_name }), user_path(user)
        .clear-float

    .col-sm-6
      %h4.text-center #{@projects_count} projects that are changing the world

      %div{style: "position: relative;"}
        - @featured_projects.each do |project|
          %div{style: "float: left; width: 19.9%; padding: 0.5%; overflow: hidden;"}
            = link_to image_tag(project.image.url(:thumb), style: "width: 100%;", class: "js-popover", data: {toggle: "popover", trigger: "hover", placement: "top", html: "true", content: content_for_project_popover(project)}, title: project.title), project_path(project)

