            -#   = image_tag project.image.url(:thumb), class: "js-fadeout-on-hover", style: "width: 100%; position: absolute; top: 0px; left: 0px; z-index: 2; background-color: #ddf;"
            -#   .homepage-project-desc{style: "position: absolute; top: 0px; left: 0px; z-index: 1; padding: 5px;"}
            -#     %p{style: "font-size: 110%;"}
            -#       .strong= project.title
            -#     - if project.tag_list.any?
            -#       %p= project.tag_list.join(", ")
            -#     %p started by #{project.owner.full_name}
            -#     %p #{project.received_stay_informed_flags.count} followers
        .clear-float

  .row.row-padded-top
    .col-sm-6
      %p.text-center= link_to "Meet all members", users_path, class: "btn btn-success"
    .col-sm-6
      %p.text-center= link_to "Browse all projects and get involved", projects_path, class: "btn btn-success"

  %hr

  .row

    .col-sm-6
      %h4.text-center #{@posts_count} conversations
      %ul
        - @featured_posts.each do |post|
          %li= link_to post.title, post_path(post)

    .col-sm-6
      %h4.text-center #{@resources_count} resources
      %p Resources are aimed at supporting our members to discover ideas and tools that help them make meaningful change. You can add links or documents that you think may be useful to others, and explore those of others.

  .row.row-padded-top
    .col-sm-6
      %p.text-center= link_to "Explore all conversations", posts_path, class: "btn btn-success"
    .col-sm-6
      %p.text-center= link_to "Explore all resources", resources_path, class: "btn btn-success"

  %hr

  .row
    .col-sm-3
    .col-sm-6
      %h4.text-center What's happening now
      - @recent_events.each do |event|
        %div.clear-float
          %div{style: "width: 50px; height: 50px; float: left; padding-right: 10px;"}
            = link_to image_tag(event.user.image.url(:thumb), style: "width: 100%;"), user_path(event.user)
          %div.small.text-muted= print_date event.datetime, time: true
          %div
            = link_to event.user.full_name, user_path(event.user)
            = event.action_description
            = link_to event.target_description, url_for(event.target)
