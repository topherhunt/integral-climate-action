#home-posts-carousel.cards-carousel.carousel.slide.carousel-fade{"data-ride": "carousel", "data-interval": 5000, "data-pause": "hover"}
  .carousel-inner{role: "listbox"}
    - @resources.each_with_index do |resource, index|

      .item{class: (index == 0 ? "active" : "")}
        %span.h4= link_to resource.title, resource_path(resource)
        %div.nowrap.text-muted
          = ellipsify(resource.description, 80)
        %div
          Categories:
          - resource.tag_list.each do |name|
            %span.label.label-default= name
          - resource.media_type_list.each do |name|
            %span.label.label-default= name
        %div.nowrap
          %span.text-muted
            = link_to image_tag(resource.creator.image.url(:thumb), class: "img-circle", style: "width: 30px;"), user_path(resource.creator)
            Added on #{print_date(resource.created_at, abbreviated: true, year: true)}
            &nbsp;
